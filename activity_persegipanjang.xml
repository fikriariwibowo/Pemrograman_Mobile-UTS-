<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_persegi_panjang"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.windows.utsmobile.MainPersegiPanjang">

    <EditText
        android:id="@+id/edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nilai 1"
        android:layout_marginTop="50dp"
        android:layout_alignLeft="@+id/edit2"
        android:layout_alignStart="@+id/edit2"
        android:phoneNumber="true"
        android:textColorHint="#FAFAFA"
        android:textAlignment="center"
        android:layout_alignRight="@+id/edit2"
        android:layout_alignEnd="@+id/edit2" />


    <EditText
        android:layout_below="@+id/edit1"
        android:id="@+id/edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nilai 2"
        android:layout_margin="10dp"
        android:phoneNumber="true"
        android:textColorHint="#FAFAFA"
        android:textAlignment="center"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luas"
        android:id="@+id/tekan"
        android:onClick="tekan1"
        android:background="@color/colorPrimary"
        android:layout_marginStart="73dp"
        android:layout_marginLeft="73dp"
        android:layout_alignBaseline="@+id/tekan1"
        android:layout_alignBottom="@+id/tekan1"
        android:layout_alignLeft="@+id/edit2"
        android:layout_alignStart="@+id/edit2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keliling"
        android:id="@+id/tekan1"
        android:onClick="tekan2"
        android:background="@color/colorPrimary"
        android:layout_marginStart="47dp"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/edit2"
        android:layout_toRightOf="@+id/tekan"
        android:layout_toEndOf="@+id/tekan" />

</RelativeLayout>
